<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.enoque_alves.comunicacaoblue.TelaDeProgramacao"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_tela_de_programacao">

    <Button
        android:id="@+id/telaDeProgramacao_abreFecha"
        android:layout_width="133dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:text="Abre/Fecha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/telaDeProgramacao_girar"
        android:layout_width="133dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:text="Girar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/telaDeProgramacao_abreFecha"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/telaDeProgramacao_avancaRecua"
        android:layout_width="133dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="11dp"
        android:text="AvanÃ§a/Recua"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/telaDeProgramacao_girar"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/telaDeProgramacao_sobeDesce"
        android:layout_width="133dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Sobe/desce"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/telaDeProgramacao_avancaRecua"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/telaDeProgramacao_ValorEnviado"
        android:layout_width="133dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="37dp"
        android:layout_marginTop="27dp"
        android:hint="Valor (1 a 100)"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/telaDeProgramacao_abreFecha"
        app:layout_constraintHorizontal_bias="0.584"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/telaDeProgramacao_delay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23" />

    <Button
        android:id="@+id/telaDeProgramacao_apagar"
        android:layout_width="170dp"
        android:layout_height="46dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:text="Apagar"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/telaDeProgramacao_salvar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/telaDeProgramacao_testar"
        android:layout_width="170dp"
        android:layout_height="46dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Testar"
        app:layout_constraintEnd_toEndOf="@+id/telaDeProgramacao_apagar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/telaDeProgramacao_salvar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/telaDeProgramacao_apagar"
        app:layout_constraintTop_toBottomOf="@+id/telaDeProgramacao_apagar" />

    <EditText
        android:id="@+id/telaDeProgramacao_delay"
        android:layout_width="133dp"
        android:layout_height="48dp"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:hint="Delay"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/telaDeProgramacao_button_more"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.595" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Delay"
        app:layout_constraintBottom_toTopOf="@+id/telaDeProgramacao_delay"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintLeft_toRightOf="@+id/telaDeProgramacao_ValorEnviado"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="170dp"
        android:layout_height="239dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="109dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/telaDeProgramacao_ValorEnviado"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ListView
            android:id="@+id/telaDeProgramacao_lista_de_comandos"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/telaDeProgramacao_button_more"
        android:layout_width="41dp"
        android:layout_height="35dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/telaDeProgramacao_ValorEnviado"
        app:layout_constraintTop_toTopOf="@+id/telaDeProgramacao_ValorEnviado"
        app:srcCompat="@mipmap/button_more" />

    <ImageButton
        android:id="@+id/telaDeProgramacao_button_less"
        android:layout_width="41dp"
        android:layout_height="35dp"
        android:layout_marginRight="-2dp"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/telaDeProgramacao_ValorEnviado"
        app:layout_constraintTop_toTopOf="@+id/telaDeProgramacao_ValorEnviado"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/telaDeProgramacao_salvar"
        android:layout_width="133dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Salvar"
        app:layout_constraintBottom_toBottomOf="@+id/telaDeProgramacao_testar"
        app:layout_constraintEnd_toEndOf="@+id/telaDeProgramacao_sobeDesce"
        app:layout_constraintStart_toStartOf="@+id/telaDeProgramacao_sobeDesce"
        app:layout_constraintTop_toTopOf="@+id/telaDeProgramacao_apagar"
        app:layout_constraintVertical_bias="0.518" />

</android.support.constraint.ConstraintLayout>
